    <Events>
        <On_Draw> <!-- debug render of windget name on mouse hover -->
            --log:msg("On Root Render");
            local mng = gui:getWindowManager();
            local font = mng:getFont("");

            local cursor = gui.cursor;
            local pos = cursor.position;
            cursor.visible = true;

            local window = gui:getTargetWindow(pos);
            local text = "?";

            if window ~= nil then
                text = window:getType() .. " :: " .. window:getName();
                --text = text .. "  F" .. );
                local area = window:getArea()
                text = text .. "  (" .. area.width .. ", " .. area.height .. ")";
            end

            render:drawText(font, text, Rect(pos.x+20, pos.y, pos.x+600, pos.y+600), Rect(0, 0, 5000, 5000), Font.LeftAligned, Color(0.1,0.5,0.4,1));
        </On_Draw>
    </Events>
